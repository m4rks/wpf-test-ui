<UserControl x:Class="UC_Analyze.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UC_Analyze"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:AnalyzeViewModel/>
    </UserControl.DataContext>

    <Grid>

        <Grid Background="AliceBlue">
            <StackPanel Orientation="Vertical">

                <Label Content="{Binding Path=Name}" />
                <!--asdf-->
                <TextBlock Text='{Binding DisplayText, RelativeSource={RelativeSource AncestorType=UserControl}}' Background='Aqua'/>
                <TextBox x:Name='UserTxBox' Background='Red' HorizontalAlignment='Stretch' Text='{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}' />

                <!--asdf-->




            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
