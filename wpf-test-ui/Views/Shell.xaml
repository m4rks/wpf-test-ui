<Window x:Class="wpf_test_ui.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_test_ui.Views" 
        xmlns:vm="clr-namespace:wpf_test_ui.ViewModels"
        xmlns:uc="clr-namespace:UC_Analyze;assembly=UC_Analyze"
        mc:Ignorable="d"
        Title="Shell" Height="450" Width="800">
    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>
    <Grid Background="Transparent">
        <Grid>
            <StackPanel Orientation="Vertical">
                <Button MinWidth="300" Command="{Binding PumpControlCommand}">PumpControlUserControl</Button>
                <Button Width="400" Command="{Binding TaskControlCommand}">TaskControlUserControl</Button>
                <ContentControl Content="{Binding CurrentView}" />
                <uc:UserControl1 Text="{Binding Path=Text}" DisplayText="{Binding Path=DisplayText}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
