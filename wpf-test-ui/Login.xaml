<Window x:Class="wpf_test_ui.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_test_ui"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="250"
        xmlns:vm="clr-namespace:wpf_test_ui.ViewModels">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Key="Return" Command="{Binding ExecuteCommand, Mode=OneWay}"/>
    </Window.InputBindings>
    <Grid>
        <StackPanel  HorizontalAlignment="Center">
            <TextBox Name="tbInputName" BorderBrush="Black" BorderThickness="1" Width="200" Height="30" Text="{Binding Path=InputName, UpdateSourceTrigger=PropertyChanged}">

            </TextBox>

            <Label  Width="200" Height="30" Content="{Binding Path=RequestedUserAndPasswordLabel}"></Label>
            <Button Width="200" Height="30" Command="{Binding LoginButtonCommand}">Login</Button>
        </StackPanel>
    </Grid>
</Window>
